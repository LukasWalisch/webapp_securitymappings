{{#if isLogged}}
You are logged in alreay, switch to Rate/Navigation
{{else}}
<div style="display: flex; height: 100%;">
    <div class="loginRegister">
        <div class="form-group">
            <h2>Login</h2>
            <label for="exampleInputEmail1">Username</label>
            {{input value=login placeholder='Login'}}<br>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            {{input value=loginPassword placeholder='password' type='password'}}<br>
        </div>
        <button class="btn btn-default" {{action "authenticate"}}>Login</button>
        <div class="errorSpace">
            {{loginMsg}}
        </div>
    </div>
    <div class="loginRegister">
        <div class="form-group">
            <h2>Register</h2>
            <label for="exampleInputEmail1">Username</label>
            {{input value=register placeholder='Login'}}<br>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            {{input value=registerPassword placeholder='password' type='password'}}<br>
        </div>
        <button {{action 'register'}} class="btn btn-default">Register</button>
    </div>
</div>

{{/if}}