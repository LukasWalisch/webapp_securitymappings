{{#if isLogged}}
Sie sind bereits eingeloggt.
{{else}}
<div style="display: block; height: 100%;">
    <div class="loginForm">
        <div class="form-group">
            <h2>Login</h2>
            <label for="exampleInputEmail1">Username</label>
            {{input value=login placeholder='Login'}}<br>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Passwort</label>
            {{input value=loginPassword placeholder='Passwort' type='password'}}<br>
        </div>
        <button class="btn btn-default" {{action "authenticate"}}>Login</button>
        <br>
        <br>
        <a href="" {{action "toggleRegister"}}>Nicht registriert? Hier klicken zum Registrieren!</a>
    </div>
    <div class="registerForm">
        <div class="form-group">
            <h2>Registrieren</h2>
            <label for="exampleInputEmail1">Username</label>
            {{input value=register placeholder='Login'}}<br>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Passwort</label>
            {{input value=registerPassword placeholder='Passwort' type='password'}}<br>
        </div>
        <button {{action 'register'}} class="btn btn-default">Registrieren</button>
    </div>
</div>
{{/if}}